<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_tela1"
        android:id="@+id/tx_Numero"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
    />

    <EditText
        android:id="@+id/identificador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:width="200dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/tx_Numero"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/identificador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:width="200dp"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/identificador1"
        />

    <Button
        android:id="@+id/bt_encontrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comprar"
        android:height="20dp"
        android:textSize="19dp"
        android:onClick="Comprar"
        app:layout_constraintTop_toBottomOf="@id/identificador2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>